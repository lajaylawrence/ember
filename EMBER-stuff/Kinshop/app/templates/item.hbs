<GeneralContainer>

<div class="item-page-ad"></div>

    <div class="product item-details-page {{if this.isZoomed 'is-zoomed'}}">

    {{!-- nested component --}}
    <Item::Image @image={{this.image}} @toggleZoom={{this.toggleZoom}} />
    
    {{!-- nested component --}}
    {{!-- use @ when passing argume t into component --}}
    <Item::Details @name={{this.model.name}} @colors={{this.model.colors}} @color={{this.color}} @onChangeColor={{this.onChangeColor}} />

     
    </div>

    

    {{!-- item details ----------- --}}
    <div class="features">
        <h5 class="mt-5">Features</h5>
        <ul>
            {{#each this.model.features as |feature|}}
            <li>{{feature}}</li>
            {{/each}}
        </ul>
    </div>
    
   
   
</GeneralContainer>